<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="562.5" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.HauptquartierController">
    <children>
        <ImageView fitHeight="562.5" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/hauptquartier.png"/>
            </image>
        </ImageView>
        <Button layoutX="571.0" layoutY="1.0" mnemonicParsing="false" onMouseClicked="#handleHilfe"
                style="-fx-background-color: orange;" text="?"/>
        <Button fx:id="kartenButton" layoutX="452.0" layoutY="1.0" mnemonicParsing="false" onMouseClicked="#openKarte"
                prefHeight="27.0" prefWidth="112.0"
                style="-fx-background-color: turquoise; -fx-border-color: #1B4D3E; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 8; -fx-text-fill: #000000;"
                text="Karte"/>
        <HBox layoutX="66.0" layoutY="82.0" prefHeight="350.0" prefWidth="842.0" spacing="10">
            <children>
                <AnchorPane fx:id="missionDetailPane" prefHeight="350.0" prefWidth="200.0"
                            style="-fx-background-color: rgba(245, 245, 220, 0.7)">
                    <children>
                        <Button fx:id="missionStarten" layoutX="45.0" layoutY="236.0" mnemonicParsing="false"
                                prefHeight="35.0" prefWidth="110.0" text="Mission starten"/>
                        <Text fx:id="detailText" layoutX="48.0" layoutY="75.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Text"/>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="flappyBirdPane" layoutX="10.0" layoutY="10.0" prefHeight="350.0" prefWidth="150.0"
                            style="-fx-background-color: rgba(245, 245, 220, 0.7)">
                    <children>
                        <Text layoutX="44.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Rette alle">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Text>
                        <Button fx:id="flappyBirdWaehlen" layoutX="36.0" layoutY="236.0" mnemonicParsing="false"
                                onMouseClicked="#flappyBirdGewaehlt" prefHeight="35.0" text="Auswählen"/>
                        <Text layoutX="5.0" layoutY="96.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Im abgestürzten Flugzeug befindet sich ein verschlüsseltes Funkgerät. Entschlüssele es um Hilfe zu holen und alle zu retten!"
                              textAlignment="CENTER" wrappingWidth="138.5">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="sammelPane" layoutX="130.0" layoutY="10.0" prefHeight="350.0" prefWidth="150.0"
                            style="-fx-background-color: rgba(245, 245, 220, 0.7)">
                    <children>
                        <Text layoutX="24.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Es geht um Zeit">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Text>
                        <Button fx:id="sammelnWaehlen" layoutX="36.0" layoutY="236.0" mnemonicParsing="false"
                                onMouseClicked="#sammelnGewaehlt" prefHeight="35.0" text="Auswählen"/>
                        <Text layoutX="9.0" layoutY="96.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              style="-fx-font-weight: bold;"
                              text="Ein Inselbewohner ist schwer verletzt und benötigt dringend 20 Gesundheitspakete. Aber Achtung nach 90 Sekunden ist es bereits zu spät!"
                              textAlignment="CENTER" wrappingWidth="131.5">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="memoryPane" layoutX="250.0" layoutY="10.0" prefHeight="350.0" prefWidth="150.0"
                            style="-fx-background-color: rgba(245, 245, 220, 0.7)">
                    <children>
                        <Text layoutX="48.0" layoutY="78.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Memory"/>
                        <Button fx:id="memoryWaehlen" layoutX="36.0" layoutY="236.0" mnemonicParsing="false"
                                onMouseClicked="#memoryGewaehlt" prefHeight="35.0" text="Auswählen"/>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="endgegnerPane" layoutX="370.0" layoutY="10.0" prefHeight="350.0" prefWidth="150.0"
                            style="-fx-background-color: rgba(245, 245, 220, 0.7)">
                    <children>
                        <Text layoutX="4.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Endgegner besiegen"/>
                        <Button fx:id="endgegnerWaehlen" layoutX="36.0" layoutY="236.0" mnemonicParsing="false"
                                onMouseClicked="#endgegnerGewaehlt" prefHeight="35.0" text="Auswählen"/>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
