<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.StartMenueController">
    <children>
        <ImageView fx:id="backgroundImage" fitHeight="730.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/neues-flugzeug.png"/>
            </image>
        </ImageView>
        <VBox layoutX="202.0" layoutY="114.0" prefHeight="298.0" prefWidth="135.0" spacing="15.0">
            <children>
                <Button fx:id="fortfahrenButton" mnemonicParsing="false" onMouseClicked="#handleFortfahren"
                        prefHeight="47.0" prefWidth="135.0"
                        styleClass="hellblauerStyle"
                        text="Fortfahren"/>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#handleNeuesSpiel"
                        prefHeight="47.0" prefWidth="135.0"
                        styleClass="hellblauerStyle"
                        text="Neues Spiel"/>
                <Button layoutX="10.0" layoutY="57.0" mnemonicParsing="false" onMouseClicked="#handleSpielLaden"
                        prefHeight="47.0" prefWidth="135.0"
                        styleClass="hellblauerStyle"
                        text="Spiel Laden"/>
                <Button layoutX="10.0" layoutY="104.0" mnemonicParsing="false" onMouseClicked="#handleEinstellungen"
                        prefHeight="47.0" prefWidth="135.0"
                        styleClass="hellblauerStyle"
                        text="Einstellungen"/>
                <Button layoutX="10.0" layoutY="151.0" mnemonicParsing="false" onMouseClicked="#handleSpielBeenden"
                        prefHeight="47.0" prefWidth="135.0"
                        styleClass="hellblauerStyle"
                        text="Spiel beenden"/>
            </children>
        </VBox>
        <Line endX="225.5" layoutX="238.0" layoutY="470.0" startX="-160.5"/>
        <fx:include source="klassisches-menue-view.fxml"/>
    </children>
</AnchorPane>
