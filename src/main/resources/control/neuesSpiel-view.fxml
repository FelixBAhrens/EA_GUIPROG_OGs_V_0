<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.NeuesSpielController">
    <children>
        <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/neues-flugzeug.png" />
            </image>
        </ImageView>
        <VBox layoutX="72.0" layoutY="114.0" prefHeight="298.0" prefWidth="371.0" spacing="15.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF;" text="Bitte wähle den Schwierigkeitsgrad">
               <font>
                  <Font size="20.0" />
               </font></Label>
                <Button fx:id="einfachButton" layoutX="10.0" layoutY="10.0" onMouseClicked="#handleSchwierigkeit" mnemonicParsing="false" prefHeight="27.0" prefWidth="112.0" style="-fx-background-color: turquoise; -fx-border-color: #1B4D3E; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 8; -fx-text-fill: #000000;" visible="true" text="Einfach" />
                <Button fx:id="mittelButton" layoutX="10.0" layoutY="10.0" onMouseClicked="#handleSchwierigkeit" mnemonicParsing="false" prefHeight="27.0" prefWidth="112.0" style="-fx-background-color: turquoise; -fx-border-color: #1B4D3E; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 8; -fx-text-fill: #000000;" visible="true" text="Mittel" />
                <Button fx:id="schwerButton" layoutX="10.0" layoutY="10.0" onMouseClicked="#handleSchwierigkeit" mnemonicParsing="false" prefHeight="27.0" prefWidth="112.0" style="-fx-background-color: turquoise; -fx-border-color: #1B4D3E; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 8; -fx-text-fill: #000000;" visible="true" text="Schwer" />
                <Button fx:id="zurueckButtn" layoutX="10.0" layoutY="10.0" onMouseClicked="#zurueckHandler" mnemonicParsing="false" prefHeight="27.0" prefWidth="112.0" style="-fx-background-color: turquoise; -fx-border-color: #1B4D3E; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 8; -fx-text-fill: #000000;" visible="true" text="Zurück" />
            </children>
        </VBox>
    </children>
</AnchorPane>
